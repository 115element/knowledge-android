<?xml version="1.0" encoding="utf-8"?>

<!--超吊的，内边框-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/gray" />
        </shape>
    </item>

    <item
        android:bottom="30dp"
        android:left="30dp"
        android:right="30dp"
        android:top="30dp">
        <shape>
            <stroke
                android:width="10dp"
                android:color="@color/beiruired" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>
