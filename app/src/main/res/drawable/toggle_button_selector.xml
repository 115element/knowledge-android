<?xml version="1.0" encoding="utf-8"?>

<!--
Android Selector作用简单理解是在点击控件时，改变控件的状态或者属性
    android:state_selected选中
    android:state_focused获得焦点
    android:state_pressed点击
    android:state_enabled设置是否响应事件,指所有事件
    -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/toggle_button_on" android:state_checked="true"/>
    <item android:drawable="@drawable/toggle_button_off"/>
<!--
    <item android:state_checked="true">
        <bitmap android:src="@drawable/toggle_button_on" android:gravity="center" />
    </item>
    <item>
        <bitmap android:src="@drawable/toggle_button_off" android:gravity="center" />
    </item>
-->
</selector>