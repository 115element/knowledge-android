<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4">

    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num7"
            android:text="7"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"/>
    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num8"
            android:text="8"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"/>
    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num9"
            android:text="9"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"/>
    <ImageButton
            android:id="@+id/delete_button"
            android:layout_height="64dp"
            android:layout_width="64dp"
            android:background="@drawable/ic_button_apple_green"
            android:src="@drawable/ic_keyboard_delete_white"
            android:scaleType="fitCenter"
            />

    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num4"
            android:text="4"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"/>
    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num5"
            android:text="5"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"/>
    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num6"
            android:text="6"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"/>
    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num_clear"
            android:text="C"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"
            />

    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num1"
            android:text="1"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"
            />
    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num2"
            android:text="2"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"
            />

    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num3"
            android:text="3"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"/>

    <ImageButton
            android:id="@+id/num_enter"
            android:layout_height="128dp"
            android:layout_width="64dp"
            android:layout_rowSpan="2"
            android:background="@drawable/ic_button_apple_green"
            android:src="@drawable/sym_keyboard_return_white"
            android:scaleType="fitCenter"
            />

    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num0"
            android:layout_columnSpan="2"
            android:text="0"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"
            android:layout_width="128dp"
            />

    <com.example.knowledge_android.widget.view.PhonicButton
            android:id="@+id/num_period"
            android:text="Â·"
            app:userFont="number"
            app:buttonFontStyle="bold"
            style="@style/num_pad_big_button"
            android:textStyle="bold"/>

</GridLayout>