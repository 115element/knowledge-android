<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:background="@drawable/item_editor_bg">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discount_input"
            style="@style/LargeTextViewStyle"
            android:layout_marginBottom="10dp"
            />
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:useDefaultMargins="true"
            android:columnCount="2">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:text="@string/original_sales_price"
                style="@style/MediumTextViewStyle"
                android:layout_columnWeight="0.5"/>
        <TextView
                android:id="@+id/sales_amount_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                style="@style/MediumTextViewStyle"
                android:text="12345"
                android:layout_columnWeight="0.5"/>

        <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/view_border"
                android:layout_columnSpan="2"
                android:useDefaultMargins="true"
                android:columnCount="2">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:text="@string/discount_amount"
                    style="@style/MediumTextViewStyle"
                    android:layout_columnWeight="0.5"/>
            <TextView
                    android:id="@+id/discount_amount_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    style="@style/MediumTextViewStyle"
                    android:text="-123"
                    android:layout_columnWeight="0.5"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/discount_percentage_hint"
                    style="@style/SmallTextViewStyle"
                    android:textSize="12sp"
                    android:textColor="@color/my_secondary_text"
                    />
            <TextView
                    android:id="@+id/discount_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="18dp"
                    android:text=""
                    style="@style/SmallTextViewStyle"
                    android:textColor="@color/my_secondary_text"
                    />

            <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:columnCount="4">

                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_7"
                        android:text="7"
                        style="@style/num_pad_big_button"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_8"
                        android:text="8"
                        style="@style/num_pad_big_button"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_9"
                        android:text="9"
                        style="@style/num_pad_big_button"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/discount_button"
                        android:text="@string/discount_percentage_portrait"
                        style="@style/num_pad_button"
                        android:layout_rowSpan="2"
                        android:layout_height="128dp"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_4"
                        android:text="4"
                        style="@style/num_pad_big_button"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_5"
                        android:text="5"
                        style="@style/num_pad_big_button"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_6"
                        android:text="6"
                        style="@style/num_pad_big_button"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>

                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_1"
                        android:text="1"
                        style="@style/num_pad_big_button"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_2"
                        android:text="2"
                        style="@style/num_pad_big_button"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_3"
                        android:text="3"
                        style="@style/num_pad_big_button"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/clear_button"
                        android:text="@string/clear_to_zero_portrait"
                        style="@style/num_pad_button"
                        android:layout_rowSpan="2"
                        android:layout_height="128dp"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_0"
                        android:text="0"
                        style="@style/num_pad_big_button"
                        android:layout_columnSpan="2"
                        android:layout_width="128dp"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>
                <hyi.mobilepos.widget.PhonicButton
                        android:id="@+id/num_period"
                        android:text="."
                        style="@style/num_pad_big_button"
                        app:userFont="number"
                        app:buttonFontStyle="bold"/>

            </GridLayout>

        </GridLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:text="@string/after_discount_amount"
                style="@style/MediumTextViewStyle"
                android:layout_columnWeight="0.5"/>
        <TextView
                android:id="@+id/after_discount_amount_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                style="@style/MediumTextViewStyle"
                android:text="12345"
                android:layout_columnWeight="0.5"/>

    </GridLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center">
        <hyi.mobilepos.widget.PhonicButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                style="@style/MediumTextViewStyle"
                android:text="@android:string/cancel"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_button_apple_white"/>
        <hyi.mobilepos.widget.PhonicButton
                android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                style="@style/MediumTextViewStyle"
                android:text="@android:string/ok"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_button_apple_white"/>
    </LinearLayout>

</LinearLayout>