<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/plu_select_shape"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/plu_select_cancel"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/x_x"
                android:layout_width="0dip"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:text="商品ID"
                android:gravity="center" />

            <TextView
                android:id="@+id/y_y"
                android:layout_width="0dip"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:text="商品名"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.knowledge_android.dialog.alertdialog_listview.PluListView
                android:id="@+id/plu_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/plu_cancel"
                android:text="取消"
                android:layout_width="0dip"
                android:layout_weight="45"
                android:background="@drawable/plu_select_cancel"
                android:layout_height="match_parent"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:layout_width="0dip"
                android:layout_weight="5"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/plu_enter"
                android:text="确定"
                android:layout_width="0dip"
                android:layout_weight="45"
                android:background="@drawable/plu_select_enter"
                android:layout_height="match_parent"
                tools:ignore="Suspicious0dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>