<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:descendantFocusability="beforeDescendants"
              android:focusableInTouchMode="true" android:background="#fff9f9f9">

    <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true" android:background="#bf76e2ff">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/customer_list"
                android:orientation="vertical" android:paddingLeft="10dp">

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="0.25">
                <TextView
                        android:id="@+id/mobile_out_order_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_out_order"
                        android:layout_centerVertical="true"
                        android:textSize="15dp"
                        android:ems="5"
                        />
                <EditText
                        android:layout_toRightOf="@id/mobile_out_order_text"
                        android:id="@+id/mobile_out_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:ems="5" android:singleLine="true"/>
                <CheckBox
                        android:layout_toRightOf="@id/mobile_out_order"
                        android:id="@+id/print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/if_need_to_print_invoice"
                        android:textSize="10dp"/>
                />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal" android:layout_weight="0.2">
                <TextView
                        android:id="@+id/customer_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customer_number"
                        android:textSize="15dp"
                        android:ems="5"/>
                <EditText
                        android:layout_toRightOf="@id/customer_number_text"
                        android:id="@+id/customer_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:ems="4" android:singleLine="true"/>
                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/customer_number_spinner"
                        android:layout_toRightOf="@id/customer_number"
                        android:spinnerMode="dropdown"/>

            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal" android:layout_weight="0.2">
                <TextView
                        android:id="@+id/store_area_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/store_area"
                        android:textSize="15dp"
                        android:ems="5"/>
                <EditText
                        android:layout_toRightOf="@id/store_area_text"
                        android:id="@+id/store_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:ems="4" android:singleLine="true"/>
                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/store_area_spinner"
                        android:layout_toRightOf="@id/store_area"
                        android:spinnerMode="dropdown"/>

            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal" android:layout_weight="0.2">
                <TextView
                        android:id="@+id/cashier_number_1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cashier_number_1"
                        android:textSize="15dp"
                        android:ems="5"/>
                <EditText
                        android:layout_toRightOf="@id/cashier_number_1_text"
                        android:id="@+id/cashier_number_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:ems="4" android:singleLine="true"/>
                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cashier_number_1_spinner"
                        android:layout_toRightOf="@id/cashier_number_1"
                        android:spinnerMode="dropdown"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal" android:layout_weight="0.2">
                <TextView
                        android:id="@+id/cashier_number_2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cashier_number_2"
                        android:textSize="15dp"
                        android:ems="5"/>
                <EditText
                        android:layout_toRightOf="@id/cashier_number_2_text"
                        android:id="@+id/cashier_number_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:ems="4" android:singleLine="true"/>
                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cashier_number_2_spinner"
                        android:layout_toRightOf="@id/cashier_number_2"
                        android:spinnerMode="dropdown"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal" android:layout_weight="0.2">
                <TextView
                        android:id="@+id/customer_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customer_name"
                        android:textSize="15dp"
                        android:ems="5"/>
                <EditText
                        android:layout_toRightOf="@id/customer_name_text"
                        android:id="@+id/customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:ems="10" android:singleLine="true"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal" android:layout_weight="0.2">
                <TextView
                        android:id="@+id/customer_mobile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customer_mobile"
                        android:textSize="15dp"
                        android:ems="5"/>
                <EditText
                        android:layout_toRightOf="@id/customer_mobile_text"
                        android:id="@+id/customer_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:ems="10" android:singleLine="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal" android:layout_weight="0.2">
            <TextView
                    android:id="@+id/customer_memo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_memo"
                    android:textSize="15dp"
                    android:ems="5"/>
                <EditText
                        android:layout_toRightOf="@id/customer_memo_text"
                        android:id="@+id/customer_memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:ems="10" android:singleLine="true"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" android:layout_weight="0.4">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="15dp">
                    <hyi.mobilepos.view.PluButtonView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="100dp"
                            android:text="@android:string/ok"
                            android:layout_marginRight="5dp"
                            app:buttonColor="#ff888888"
                            android:background="@drawable/ic_button_apple_white"
                            android:id="@+id/ok_button"/>
                    <hyi.mobilepos.view.PluButtonView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="100dp"
                            android:text="@android:string/cancel"
                            android:layout_marginLeft="20dp"
                            app:buttonColor="#ff888888"
                            android:background="@drawable/ic_button_apple_white"
                            android:id="@+id/cancel_button"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>