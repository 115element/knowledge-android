<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:descendantFocusability="beforeDescendants"
              android:focusableInTouchMode="true"
              android:background="@drawable/time_limit_job_bg">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MediumTextViewStyle"
            android:text="@string/setReplace"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:padding="3dp"
            />
    <ListView
            android:id="@+id/item_setreplace_listview"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_margin="2dp"
            android:background="@drawable/view_border"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:choiceMode="singleChoice"
            />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/view_border"
            >
        <TextView
                android:id="@+id/item_modifier_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                style="@style/MediumTextViewStyle"
                android:singleLine="false"
                android:lines="3"
                android:gravity="center"
                android:text="@string/modifier_description"
                />
        <com.example.knowledge_android.widget.view.PhonicButton
                android:id="@+id/item_modifier_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                style="@style/MediumTextViewStyle"
                android:text="@string/edit_item_modifier"
                android:background="@drawable/ic_button_apple_white"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp">
        <com.example.knowledge_android.widget.view.PhonicButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                style="@style/MediumTextViewStyle"
                android:text="@android:string/cancel"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_button_apple_white"/>
        <com.example.knowledge_android.widget.view.PhonicButton
                android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                style="@style/MediumTextViewStyle"
                android:text="@android:string/ok"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_button_apple_white"/>
    </LinearLayout>
</LinearLayout>