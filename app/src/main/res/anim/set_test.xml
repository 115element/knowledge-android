<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!--复合动画创建-->
    <alpha android:fromAlpha="0" android:toAlpha="1" android:duration="2000"></alpha>

    <rotate android:fromDegrees="0" android:toDegrees="360" android:duration="2000" android:startOffset="2000"></rotate>

    <!--透明度从透明到不透明，持续2秒，接着进行旋转360度动画，持续1秒-->
</set>